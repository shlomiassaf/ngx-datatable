{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "declaration": true,
    "outDir": "dist_package/src",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/assets",
    "src/demo",
    "src/**/*.spec.ts",
    "e2e"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "./src/compiled",
    "debug": false,
    "skipMetadataEmit": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
